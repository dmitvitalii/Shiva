<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <include layout="@layout/content_main" />

        <RadioGroup
            android:id="@+id/main_component_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/component_activity"
                android:textAllCaps="true"
                android:text="@string/component_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/component_service"
                android:textAllCaps="true"
                android:text="@string/component_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/component_broadcast"
                android:textAllCaps="true"
                android:text="@string/component_broadcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:background="?attr/selectableItemBackground"
        android:textAllCaps="true"
        android:layout_gravity="bottom|end"
        android:text="@string/button_send" />
</FrameLayout>